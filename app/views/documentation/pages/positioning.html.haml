- if @page
  - @page_title = @page.breadcrumb.reverse.map(&:title).join(" - ")
  = documentation_breadcrumb_for @page
- else
  - @page_title = "Reorder root pages"
  = documentation_breadcrumb_for nil

%section.page
  %h1= @page ? @page.title : 'Re-order root pages'

  = form_tag page_positioning_path(@page.try(:full_permalink)), :class => 'reordering' do 
    %ul
      - for child in @pages
        %li
          = child.title
          = hidden_field_tag 'order[]', child.id
  
  %p.adminButtons
    - if @page
      = link_to "Back to page", page_path(@page.full_permalink), :class => 'button edit'
    - else
      = link_to "Back to homepage", root_path, :class => 'button edit'
